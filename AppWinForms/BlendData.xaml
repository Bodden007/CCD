                            </Grid>
                            <Grid Grid.Column="1" Grid.Row="1" Background="White">
                                <TextBox HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Times New Roman" FontSize="60" Text="0.00"/>
                            </Grid>
                            <Grid Grid.Column="1" Grid.Row="2" Background="White">
