                            </Grid>
                            <!--Save4-->
                            <Button x:Name="Save4" Grid.Column="2" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="{DynamicResource SecondBlueColor}" Click="Save4_Click">
                                <TextBlock FontFamily="Times New Roman" FontSize="60" TextWrapping="Wrap" Text="Save"></TextBlock>
                            </Button>
